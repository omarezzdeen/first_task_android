<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="328dp"
        android:layout_height="117dp"
        android:layout_margin="16dp"
        android:background="@color/grey"
        android:backgroundTint="@color/grey"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/_8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sp"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginBottom="@dimen/_12dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_8dp">

                <ImageView
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image"
                    app:cardElevation="0dp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12dp"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="Ahmed hassan"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12dp"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="Engineer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12dp"
                    android:layout_marginBottom="@dimen/_4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_4dp"
                        android:src="@drawable/ic_baseline_location" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsans_medium"
                        android:text="UK"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/_13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12dp"
                        android:fontFamily="@font/dmsans_regular"
                        android:text="(150 Reviews)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8dp"
                        android:fontFamily="@font/dmsans_medium"
                        android:text="4.5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sp" />

                    <ImageView
                        android:layout_width="@dimen/_12dp"
                        android:layout_height="@dimen/_12dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4dp"
                        android:src="@drawable/star" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/_8dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:background="@drawable/my_background"
                    android:elevation="0dp"
                    android:fontFamily="@font/dmsans_regular"
                    android:paddingHorizontal="@dimen/_8dp"
                    android:paddingVertical="@dimen/_4dp"
                    android:text="3 hr"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="Russian"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:gravity="end"
                    android:text="5 Days ago"
                    android:textColor="@color/grey_text"
                    android:textSize="@dimen/_12sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
